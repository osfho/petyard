<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Image</th>
    <th>Mod message</th>
    <th>Mod</th>
    <th>Hidden</th>
    <th>Op</th>
    <th>User</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.image %></td>
    <td><%= post.mod_message %></td>
    <td><%= post.mod_id %></td>
    <td><%= post.hidden %></td>
    <td><%= post.op %></td>
    <td><%= post.user_id %></td>
    <td><%= post.topic_id %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

